generator cprsent {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  name     String
  email    String    @unique
  id       Int       @id @default(autoincrement())
  projects Project[]
}

model Project {
  name         String
  ownerId      Int
  id           Int           @id @default(autoincrement())
  endDate      DateTime      @default(dbgenerated("'0001-01-01 00:00:00'::timestamp without time zone"))
  logLine      String
  startDate    DateTime      @default(dbgenerated("'0001-01-01 00:00:00'::timestamp without time zone"))
  dayDetails   Day[]
  owner        User          @relation(fields: [ownerId], references: [id])
  projectRoles ProjectRole[]
}

model Day {
  id        Int      @id @default(autoincrement())
  projectId Int
  startTime DateTime @default(dbgenerated("'0001-01-01 00:00:00'::timestamp without time zone"))
  endTime   DateTime @default(dbgenerated("'0001-01-01 00:00:00'::timestamp without time zone"))
  Location  String
  project   Project  @relation(fields: [projectId], references: [id])
}

model Person {
  name        String
  order       Int    @default(autoincrement())
  id          Int    @id @default(autoincrement())
  email       String @unique
  phoneNumber String
  roleId      Int
  role        Role   @relation(fields: [roleId], references: [id])
}

model GoTos {
  id    Int    @id @default(autoincrement())
  name  String
  icon  Int @default(1)
  roles Role[]
}

model Role {
  name         String
  id           Int           @id @default(autoincrement())
  goToId       Int
  people       Person[]
  projectRoles ProjectRole[]
  goTos        GoTos         @relation(fields: [goToId], references: [id])
  @@unique(fields: [id, goToId], name: "complexId")
}

model ProjectRole {
  id        Int     @id @default(autoincrement())
  projectId Int
  roleId    Int
  project   Project @relation(fields: [projectId], references: [id])
  role      Role    @relation(fields: [roleId], references: [id])
}
