generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  name         String
  email        String        @unique
  id           Int           @id @default(autoincrement())
  defaultLists DefaultList[]
  projects     Project[]
}

model Project {
  name       String
  ownerId    Int
  id         Int      @id @default(autoincrement())
  endDate    DateTime 
  logLine    String
  startDate  DateTime 
  dayDetails Day[] 
  owner      User     @relation(fields: [ownerId], references: [id])
  roles      Role[]
}

model Day {
  id        Int      @id @default(autoincrement())
  projectId Int
  startTime DateTime
  endTime   DateTime
  Location  String
  project   Project  @relation(fields: [projectId], references: [id])
}

model Role {
  name         String
  id           Int           @id @default(autoincrement())
  projectId    Int
  defaultLists DefaultList[]
  people       Person[]
  project      Project       @relation(fields: [projectId], references: [id])
}

model Person {
  name         String
  order        Int
  id           Int           @id @default(autoincrement())
  roleId       Int
  defaultLists DefaultList[]
  role         Role          @relation(fields: [roleId], references: [id])
}

model DefaultList {
  userId   Int
  order    Int
  id       Int    @id @default(autoincrement())
  roleId   Int
  personId Int
  person   Person @relation(fields: [personId], references: [id])
  role     Role   @relation(fields: [roleId], references: [id])
  user     User   @relation(fields: [userId], references: [id])
}
